---
import ChevronLeft from './variants/ChevronLeft.astro';
import ChevronRight from './variants/ChevronRight.astro';
import Express from './variants/Express.astro';
import ExternalLink from './variants/ExternalLink.astro';
import Firebase from './variants/Firebase.astro';
import Git from './variants/Git.astro';
import Github from './variants/Github.astro';
import JavaScript from './variants/JavaScript.astro';
import LinkedIn from './variants/LinkedIn.astro';
import Nextjs from './variants/Nextjs.astro';
import Node from './variants/Node.astro';
import Postgres from './variants/Postgres.astro';
import React from './variants/React.astro';
import RightArrow from './variants/RightArrow.astro';
import Sass from './variants/Sass.astro';
import Sequelize from './variants/Sequelize.astro';
import Tailwind from './variants/Tailwind.astro';
import TypeScript from './variants/TypeScript.astro';

type Variant =
  | 'ExternalLink'
  | 'Firebase'
  | 'Git'
  | 'Github'
  | 'JavaScript'
  | 'LinkedIn'
  | 'Nextjs'
  | 'React'
  | 'RightArrow'
  | 'Sass'
  | 'Tailwind'
  | 'TypeScript'
  | 'ChevronLeft'
  | 'ChevronRight'
  | 'Node'
  | 'Postgres'
  | 'Sequelize'
  | 'Express';

interface Props {
  variant: Variant
}

const { variant } = Astro.props;

// eslint-disable-next-line @typescript-eslint/no-explicit-any
const iconMap: Record<Variant, any> = {
  ExternalLink,
  Firebase,
  Git,
  Github,
  JavaScript,
  LinkedIn,
  Nextjs,
  React,
  RightArrow,
  Sass,
  Tailwind,
  TypeScript,
  ChevronLeft,
  ChevronRight,
  Node,
  Postgres,
  Sequelize,
  Express,
};

const SelectedIcon = iconMap[variant];
---
{
  SelectedIcon && (
    <SelectedIcon />
  )
}

<style>
  svg {
    stroke: inherit;
  }
</style>
