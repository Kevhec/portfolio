---
interface Props {
  mockup: {
    src: string,
    alt: string,
  }
}
---

<main class="project__main">
  <slot name="image" />
  <div class="evenColumns">
    <slot name="content" />
  </div>
</main>

<style lang="scss" is:global>
  .project__main {
    img {
      object-fit: cover;
    }

    picture {
      width: fit-content;
      height: fit-content;

      @include mediaq($bp-small-pc) {
        max-width: 60%;
      }
    }

    > picture:first-child img {
      width: 100%;
      aspect-ratio: 4 / 3;
      flex: 0 0 min(680px, 100%);
      margin-bottom: 1rem;
    }

    @include mediaq($bp-small-pc) {
      display: flex;
      gap: rem(32);
    }

    .evenColumns {
      flex: 1;

      > *:first-child {
        margin-bottom: 1.5rem;

        @include mediaq($bp-tablet) {
          margin-bottom: 0;
        }
      }

      @include mediaq($bp-tablet) {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(0px, 1fr));
        column-gap: rem(16);
      }

      > * {
        display: flex;
        flex-direction: column;
      }
    }
  }
</style>