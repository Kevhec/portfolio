<swiper-container
  init="false"
  id="slider"
>
  <slot />
</swiper-container>

<script>
  import { register, type SwiperContainer } from 'swiper/element/bundle';
import type { SwiperOptions } from 'swiper/types';
  register();

  const swiperElement = document.getElementById('slider') as SwiperContainer;

  const swiperParams: SwiperOptions = {
    slidesPerView: 1,
    speed: 2000,
    loop: true,
    cssMode: true,
    navigation: true,
    pagination: true,
    autoplay: {
      delay: 8000,
      pauseOnMouseEnter: true,
    },
    spaceBetween: 32,
    centeredSlides: true,
  } 


  Object.assign(swiperElement, swiperParams)

  swiperElement.initialize();
</script>