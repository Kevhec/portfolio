---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <div class="container">
      <slot />
    </div>
	</body>
</html>
<style lang="scss">
  body {
    background: url(/background-noise.png), $primary-green;
    color: $primary-light-beige;
    overflow: hidden;
  }

  .container {
    width: 80%;
    margin-inline: auto;
  }
</style>
