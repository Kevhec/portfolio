---
import Typography from '../components/Typography.astro';
import Sunflower from '../components/Sunflower.astro';
import Button from '../components/Button.astro';
import LinkedinIcon from '../components/icons/LinkedinIcon.astro';
import GithubIcon from '../components/icons/GithubIcon.astro';
import Container from '@components/Container.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Container>
  <section class="introduction">
    <div class="introduction__content">
      <Typography as="h1" weight="regular">
        <Typography as="span" class="introduction__upper-line">
          {t('intro.greet')}
        </Typography>
        <Typography as="span" accent weight="semibold" class="introduction__bottom-line">
          {t('intro.name')}
        </Typography>
      </Typography>
      <Typography as="p">
        {t('intro.introduction.1')},<br>
        {t('intro.introduction.2')},<br>
        {t('intro.introduction.3')}<br>
      </Typography>
      <div class="introduction__buttons">
        <Button
          as='a'
          href=`
            mailto:kevhec.dev@gmail.com?subject=${t('intro.getintouch.subject')}&body=${t('intro.getintouch.message')}
          `
          positionAware
        >
          {t('intro.getintouch')}
        </Button>
        <Button
          as='a'
          href="https://www.linkedin.com/in/kevin-alejandro-806b2a195/"
          newTab
          onlyIcon
          aria-label={t('intro.linkedinlabel')}
        >
          <figure aria-hidden="true">
            <LinkedinIcon />  
          </figure>
          <p class="visually-hidden">{t('intro.linkedinlabel')}</p>
        </Button>
        <Button
          as='a'
          href="https://github.com/Kevhec"
          newTab
          onlyIcon
          aria-label={t('intro.githublabel')}
        >
          <figure aria-hidden="true">
            <GithubIcon />
          </figure>
          <p class="visually-hidden">{t('intro.githublabel')}</p>
        </Button>
      </div>
    </div>
    <div class="sunflower">
      <Sunflower />
    </div>
  </section>
</Container>

<style lang="scss">
  .introduction {
    height: 100vh;
    display: grid;
    place-items: center;
    position: relative;

    @include mediaq($bp-small-pc) {
      grid-template-columns: repeat(2, 1fr);
    }

    &__upper-line {
      position: relative;

      &::after {
        display: none;
        content: "";
        @include sunflowerProps();
        position: absolute;
        transform: scale(.7);
        top: -110%;
        right: rem(-150);
        
        @include mediaq($bp-phone) {
          display: block;
        }

        @include mediaq($bp-small-pc) {
          display: none;
        }
      }
    }

    &__bottom-line {
      display: block;

      @include mediaq($bp-small-pc) {
        display: inline;
      }
    }

    &__buttons {
      margin-top: rem(36);
      display: flex;
      gap: rem(16);
      align-items: center;
    }
  }

  .sunflower {
    display: none;

    @include mediaq($bp-small-pc) {
      display: block;
      position: static;
      transform: scale(2);
    }
  }
</style>