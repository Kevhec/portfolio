---
import Typography from '../components/Typography.astro';
import Sunflower from '../components/Sunflower.astro';
import Button from '../components/Button.astro';
import LinkedinIcon from '../components/icons/LinkedinIcon.astro';
import GithubIcon from '../components/icons/GithubIcon.astro';
---

<section class="introduction">
  <div class="introduction__content">
    <Typography as="h1" weight="regular">
      <Typography as="span" class="introduction__upper-line">
        Hey! it's
      </Typography>
      <Typography as="span" accent weight="semibold" class="introduction__bottom-line">
        Kevin Henao
      </Typography>
    </Typography>
    <Typography as="p">
      Frontend Developer,<br>
      Aspiring Accessibility Advocate,<br>
      Learning Enthusiast.<br>
    </Typography>
    <div class="introduction__buttons">
      <Button href="#">
        Get in touch
      </Button>
      <Button
        href="https://www.linkedin.com/in/kevin-alejandro-806b2a195/"
        newTab
        onlyIcon
      >
        <LinkedinIcon />  
      </Button>
      <Button
        href="https://github.com/Kevhec"
        newTab
        onlyIcon
      >
        <GithubIcon />
      </Button>
    </div>
  </div>
  <div class="sunflower">
    <Sunflower />
  </div>
</section>

<style lang="scss">
  .introduction {
    height: 100vh;
    display: grid;
    place-items: center;
    position: relative;

    @include mediaq($bp-small-pc) {
      grid-template-columns: repeat(2, 1fr);
    }

    &__upper-line {
      position: relative;

      &::after {
        content: "";
        @include sunflowerProps();
        display: block;
        position: absolute;
        transform: scale(.7);
        top: -110%;
        right: -85%;

        @include mediaq($bp-small-pc) {
          display: none;
        }
      }
    }

    &__bottom-line {
      display: block;

      @include mediaq($bp-small-pc) {
        display: inline;
      }
    }

    &__buttons {
      margin-top: rem(36);
      display: flex;
      gap: rem(16);
      align-items: center;
    }
  }

  .sunflower {
    display: none;

    @include mediaq($bp-small-pc) {
      display: block;
      position: static;
      transform: scale(2);
    }
  }
</style>