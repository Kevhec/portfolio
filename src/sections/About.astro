---
import Typography from '@components/Typography.astro';
import { Image } from 'astro:assets';
import portrait from '@assets/images/portrait.png';
import Container from '@components/Container.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="about">
  <Container>
    <div class="about__content">
      <figure class="about__portrait">
        <Image src={portrait} alt="My portrait" />
      </figure>
      <div class="about__text">
        <Typography as='p' >
          {t('about.1')}<Typography as='span' weight='bold'>{t('about.2')}</Typography>{t('about.3')}<Typography as='span' weight='bold'>{t('about.4')}</Typography>{t('about.5')}<Typography as='span' weight='bold'>{t('about.6')}</Typography>{t('about.7')}<Typography as='span' weight='bold'>{t('about.8')}</Typography>
        </Typography>
      </div>
    </div>
  </Container>
</section>

<style lang="scss">
  .about {
    background-color: $neutral-white;
    &__content {
      padding: rem(56) 0;
      
      @include mediaq($bp-tablet) {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        place-items: center;
        gap: rem(64);
      }
    }

    &__portrait {
      display: none;
      background-color: $primary-green;
      padding: rem(32);
      border-radius: 44444px;
      width: 250px;
      height: 250px;
      justify-self: start;

      @include mediaq($bp-tablet) {
        display: block;
      }

      @include mediaq($bp-small-pc) {
        display: grid;
        place-items: center;
        width: 100%;
        height: initial;
        aspect-ratio: 1/1;
      }

      img {
        height: 100%;
        object-fit: contain;

        @include mediaq($bp-small-pc) {
          height: initial;
          object-fit: initial;
        }
      }
    }

    &__text {
      width: 100%;
      color: $primary-green;
      justify-self: end;

      @include mediaq($bp-tablet) {
        width: 90%;
      }
    }
  }
</style>
